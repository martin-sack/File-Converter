{
  "name": "universal-file-converter",
  "version": "1.0.0",
  "description": "Production-ready Universal File Converter",
  "main": "dist/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron .",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "electron",
    "converter",
    "file-converter"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/json2csv": "^5.0.7",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/showdown": "^2.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "dependencies": {
    "csv-parser": "^3.0.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2",
    "json2csv": "^6.0.0-alpha.2",
    "jszip": "^3.10.1",
    "mammoth": "^1.6.0",
    "path-browserify": "^1.0.1",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.33.1",
    "showdown": "^2.1.0",
    "tesseract.js": "^5.0.4"
  },
  "build": {
    "appId": "com.yourcompany.fileconverter",
    "productName": "Universal File Converter",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
